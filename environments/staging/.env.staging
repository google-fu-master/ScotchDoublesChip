# Staging Environment Configuration
NODE_ENV=staging
DEBUG=false

# Database
DATABASE_URL=postgresql://username:password@staging-db.example.com:5432/tournament_staging
REDIS_URL=redis://staging-redis.example.com:6379

# API Configuration
API_BASE_URL=https://staging-api.tournament-app.com
NEXT_PUBLIC_API_URL=https://staging-api.tournament-app.com

# Authentication
JWT_SECRET=staging-jwt-secret-32-chars-long
JWT_EXPIRES_IN=7d

# External Services
FARGO_API_URL=https://fargorate.com/api
FARGO_API_KEY=staging-fargo-api-key

# SMS/Email Services
TWILIO_ACCOUNT_SID=staging-twilio-account-sid
TWILIO_AUTH_TOKEN=staging-twilio-auth-token
TWILIO_PHONE_NUMBER=+1555123456

SENDGRID_API_KEY=staging-sendgrid-api-key
FROM_EMAIL=noreply@tournament-app.com

# File Storage
UPLOAD_STORAGE=s3
AWS_S3_BUCKET=tournament-app-staging-uploads
AWS_REGION=us-west-2

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=https://staging-sentry-dsn@sentry.io

# Feature Flags
ENABLE_FARGO_INTEGRATION=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Staging specific
STAGING_MODE=true
MOCK_PAYMENTS=true