# Production Environment Configuration
NODE_ENV=production
DEBUG=false

# Database (Use environment variables or secrets management)
DATABASE_URL=${PRODUCTION_DATABASE_URL}
REDIS_URL=${PRODUCTION_REDIS_URL}

# API Configuration
API_BASE_URL=https://api.tournament-app.com
NEXT_PUBLIC_API_URL=https://api.tournament-app.com

# Authentication
JWT_SECRET=${PRODUCTION_JWT_SECRET}
JWT_EXPIRES_IN=7d

# External Services
FARGO_API_URL=https://fargorate.com/api
FARGO_API_KEY=${PRODUCTION_FARGO_API_KEY}

# SMS/Email Services
TWILIO_ACCOUNT_SID=${PRODUCTION_TWILIO_SID}
TWILIO_AUTH_TOKEN=${PRODUCTION_TWILIO_TOKEN}
TWILIO_PHONE_NUMBER=${PRODUCTION_PHONE_NUMBER}

SENDGRID_API_KEY=${PRODUCTION_SENDGRID_KEY}
FROM_EMAIL=noreply@tournament-app.com

# File Storage
UPLOAD_STORAGE=s3
AWS_S3_BUCKET=tournament-app-production-uploads
AWS_REGION=us-west-2

# Monitoring
LOG_LEVEL=warn
SENTRY_DSN=${PRODUCTION_SENTRY_DSN}

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600

# Security
RATE_LIMIT_ENABLED=true
CORS_ORIGIN=https://tournament-app.com,https://www.tournament-app.com

# Feature Flags
ENABLE_FARGO_INTEGRATION=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Production specific
MAINTENANCE_MODE=false
CDN_URL=https://cdn.tournament-app.com